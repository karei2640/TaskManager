
<% content_for :content do %>
  <h1>新しいタスク作成</h1>

  <%= form_with model: @task, url: tasks_path, class: "form" do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :description, "詳細" %>
        <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :priority, "優先度" %>
        <%= form.select :priority, options_for_select([1, 2, 3, 4, 5]), {}, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :due_date, "期限" %>
        <%= form.date_field :due_date, class: "form-control" %>
    </div>

    <%= form.submit "作成", class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= render template: "layouts/application" %>
