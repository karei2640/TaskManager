<% content_for :title, "タスク詳細" %>

<% content_for :content do %>
  <h1>タスク詳細</h1>

  <div>
    <h3><%= @task.title %></h3>
    <p><%= @task.description %></p>
    <p>優先度: <%= @task.priority %></p>
    <p>期限: <%= @task.due_date %></p>
  </div>

  <%= link_to "編集", edit_task_path(@task), class: "btn btn-primary" %>
  <%= link_to "削除", task_path(@task), method: :delete, data: { confirm: "本当に削除しますか?" }, class: "btn btn-danger" %>
<% end %>

<%= render template: "layouts/application" %>