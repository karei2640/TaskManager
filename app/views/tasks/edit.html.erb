<% content_for :title, "タスク編集" %>

<% content_for :content do %>
  <h1>タスク編集</h1>

  <%= form_with model: @task, url: task_path(@task), method: :patch, class: "form" do |form| %>
    <div class="form-group">
      <%= form.label :title, "タイトル" %>
      <%= form.text_field :title, value: @task.title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "詳細" %>
      <%= form.text_area :description, value: @task.description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :priority, "優先度" %>
      <%= form.select :priority, options_for_select([1, 2, 3, 4, 5], @task.priority), class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :due_date, "期限" %>
      <%= form.date_field :due_date, value: @task.due_date, class: "form-control" %>
    </div>

    <%= form.submit "更新", class: "btn btn-primary" %>
  <% end %>
<% end %>

<%= render template: "layouts/application" %>
